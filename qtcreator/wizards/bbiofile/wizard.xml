<wizard version="1" kind="class" id="B.MachinekitBBIOFile" category="B.Machinekit"
    platformIndependent="true">
    <description>Creates a BB universal IO configuration file.</description>
    <displayname>BB universal IO configuration</displayname>;
    <displaycategory>Machinekit</displaycategory>
    <files>
        <file source="bbiofile.bbio" target="%Name%.bbio" openeditor="true"/>
    </files>
    <fieldpagetitle>Details</fieldpagetitle>
    <fields>
        <field name="Name">
            <fieldcontrol class="QLineEdit" validator='^[^"]+$' defaulttext="pin-config" placeholdertext="Enter a file name"/>
            <fielddescription>File name:</fielddescription>
        </field>
        <field name="Title">
            <fieldcontrol class="QLineEdit" defaulttext="Pin Configuration" placeholdertext="Enter a title"/>
            <fielddescription>Title:</fielddescription>
        </field>
    </fields>
</wizard>
